<h1>Votes Remaining: <%= @votes %></h1>

<% if @notice %>
  <p class='notice'><%= @notice %></p>
<% elsif @error %>
  <p class='error'><%= @error %></p>
<% end %>

<ul class="colors">
  <% @colors.each do |color| %>
  <li class="color" style="background-color: #<%= color.hex %>;">
    #<%= color.hex %>
    <span class="votes">Votes: <%= color.votes.length %>
      <%= form_for [color, Vote.new] do |f| %>
      <button type="submit" class="vote">
        <span class="vote">🗳</span>
        <span class="nope">🙅‍♀️</span>
      </button>
      <% end %>
    </span>
  </li>
  <% end %>
</ul>
